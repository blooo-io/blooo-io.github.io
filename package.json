{
  "private": true,
  "scripts": {
    "start": "PORT=8080 EXTEND_ESLINT=true react-scripts start",
    "build": "react-scripts build",
    "audit": "audit-ci --moderate",
    "test": "env-cmd jest",
    "test:ci": "react-scripts test --watchAll=false --ci --coverage --reporters=default --reporters=jest-sonar",
    "lint": "eslint --ext .jsx,.js src --fix --ignore-pattern *.test.js",
    "lint:prettier": "prettier . --check",
    "lint:css": "stylelint '**/*.css'",
    "eject": "react-scripts eject"
  },
  "dependencies": {
    "@cef-ebsi/did-auth": "0.0.1",
    "@ecl/ec-preset-website": "^2.28.0",
    "axios": "^0.19.0",
    "base-64": "^0.1.0",
    "body-scroll-lock": "^2.6.4",
    "did-jwt": "^4.2.0",
    "elliptic": "^6.5.2",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "ethers": "^4.0.40",
    "jest-transform-css": "^2.0.0",
    "moment": "^2.26.0",
    "prop-types": "^15.7.2",
    "query-string": "^6.8.3",
    "react": "^16.11.0",
    "react-app-polyfill": "^1.0.5",
    "react-bootstrap": "^1.0.0-beta.14",
    "react-dom": "^16.11.0",
    "react-icons": "^3.8.0",
    "react-json-pretty": "^2.2.0",
    "react-router-dom": "^5.1.2",
    "react-scripts": "^3.4.1",
    "reactour": "^1.16.1",
    "styled-components": "^4.4.1"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "airbnb-typescript",
      "airbnb/hooks",
      "plugin:jest/all",
      "plugin:prettier/recommended",
      "prettier/@typescript-eslint",
      "prettier/react"
    ],
    "parserOptions": {
      "project": "./tsconfig.eslint.json"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.7.4",
    "@babel/plugin-transform-runtime": "^7.7.6",
    "@babel/preset-typescript": "^7.7.7",
    "@types/elliptic": "^6.4.12",
    "@types/jest": "^25.2.3",
    "@typescript-eslint/eslint-plugin": "^2.27.0",
    "@typescript-eslint/parser": "^2.19.2",
    "audit-ci": "^3.0.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^24.9.0",
    "babel-plugin-rewrite-require": "^1.14.5",
    "dotenv": "^8.2.0",
    "env-cmd": "^10.0.1",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-airbnb-typescript": "^7.2.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-config-react-app": "^5.2.1",
    "eslint-plugin-flowtype": "^4.7.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^2.5.1",
    "husky": "^4.2.5",
    "jest": "^24.9.0",
    "jest-sonar": "^0.2.5",
    "lint-staged": "^10.1.3",
    "prettier": "^2.0.4",
    "stylelint": "^13.3.1",
    "stylelint-config-prettier": "^8.0.1",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-prettier": "^1.1.2",
    "ts-jest": "^24.2.0",
    "typescript": "^3.8.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ],
    "*.{css,scss,sass}": [
      "stylelint --fix"
    ],
    "*.{md,mdx,html,json,yml,yaml}": [
      "prettier --write"
    ]
  }
}
